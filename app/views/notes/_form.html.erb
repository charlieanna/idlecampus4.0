<%= form_for Note.new, :html => {:id => "groupnoteupload"},remote: true do |f| %>
  <div>
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
<%= f.hidden_field "authenticity_token",value: form_authenticity_token %>
    <div class="col-xs-12">
			<%= f.text_area :message,rows: 3,class:"form-control",placeholder:"Enter your note here:",required: true %>
    </div>
    <div class="form-group">
       <%= f.file_field :file %>
     </div>
     
      <% if @group.group_code %>
			  <%= f.hidden_field :group,:value =>@group.group_code %>
      <% else %>
      <div class="col-xs-3"> 
      <%= f.select :group, current_user.groups.collect {|p| [ p.name, p.group_code ] },{},class:"form-control " %>
    </div>
  </hr>
      <% end %>
     
      <p> <button type="button" data-loading-text="Uploading..." class="btn
      btn-success" id="note_file_button" ng-click="publishgroupnote()"><i class="fa fa-upload"></i> Upload
      </button> </p> <span id="message" style="display:none">Note sent</span> </div>


<% end %>