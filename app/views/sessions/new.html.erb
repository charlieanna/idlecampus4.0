<% provide(:title, "Sign in") %>
<!-- /Navbar -->

<div class="row">
	<!-- Login content -->
	<div id="login">
		<div id="main-header">
			<h3>Login to your user account</h3>
		</div>
	
		<div id="login-content" class="clearfix">
			
		
			  
	            <%= form_for(:session, url: sessions_path) do |f| %>
	              
					<fieldset>
						<div class="control-group">
							<label class="control-label" for="email"><i class="icon-user"></i>&nbsp;&nbsp;Email address</label>
	                       <%= f.text_field :email,placeholder: "Email:" %>
						</div>
						<div class="control-group">
							<label class="control-label" for="password"><i class="icon-lock"></i>&nbsp;&nbsp;Password</label>
	                        <%= f.password_field :password,placeholder: "Password:" %>
						
				  <!-- <p><%= link_to '<i class="icon-key"></i>&nbsp;&nbsp;Password forgotten?'.html_safe, new_password_reset_path %> -->
					
							
						</div>
					</fieldset>
					<hr>
					
					
	                    <input class="btn btn-success btn-large signinbutton" name="commit" type="submit"
	                           value="Login">
					
				  <% end %>
			  
        
		</div>
	</div>
	<!-- /Login content -->
</div>

<!-- Javascript files -->

