

<!DOCTYPE html>
<html>
	<head>
		<!-- Title here -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <title><%= yield(:title) %></title>

   

    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application", :defer => "defer" %>
  
    <%= csrf_meta_tags %>
	</head>
	

  <body ng-controller="xmpp" ng-init="attach()">
       <div class="wrapper">
         <!-- Top Starts -->
         <div class="top">
	
	
           <%= render 'layouts/header1' %>
           <% if params[:controller] == "homes" && params[:action] == "show" && !signed_in? %>
          	<!-- Hero starts -->
          	<div class="hero">
          		<div class="container">
          			<div class="row">
        
        
          				<div class="col-md-8">
          					<div class="intro">
          						<h2>Simple<span class="tblue">.</span> Minimal<span class="tblue">.</span> Cloud<span class="tblue">.</span></h2>
          						<p>Connect with your students and keep them updated with what is important to them. </p><br />
          						<a href="/teachers/new" class="download"><i class="fa fa-heart"></i> Sign Up!</a> <strong>or Try It</strong>
          						<div class="applinks">
          							<a href="https://itunes.apple.com/us/app/idlecampus/id589694599?ls=1&mt=8"><i class="fa fa-android"></i></a>
          							<a href="https://play.google.com/store/apps/details?id=com.idlecampus"><i class="fa fa-apple"></i></a>
						
          						</div>
          					</div>
          				</div>
          				<div class="col-md-4">
          					<div class="shot">
          						<img src="img/ios.png" alt="image" class="img-responsive"/>
          					</div>
          				</div>
          			</div>
          		</div>
          	</div>
          	<!-- Hero ends -->
            <% else %>
           	<!-- Hero starts -->
           	<div class="hero">
           		<div class="container">
           			<div class="row">
        
        
           				<div class="col-md-8">
           					<div class="intro">
           					<%= yield(:header) %>
           					</div>
           				</div>
           				
           			</div>
           		</div>
           	</div>
           	<!-- Hero ends -->
           <% end %>
         	<!-- Header Ends -->
	
        
         </div>
         <!-- Top Ends -->
     
     
 
   
   <% flash.each do |key, value| %>
    <% if key!=:register && key!=:group && key != :attacher %>
       <div class="alert alert-<%= key %>"><%= value %></div>
     <% end %>
     <% end %>
     
   
     <%= yield %>
    
     
    
          
           
       </div>
       <%= render "layouts/footer" %>
   </body>
</html>