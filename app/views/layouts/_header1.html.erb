
	<!-- Header Starts -->
	<header>
		<div class="container">
			<div class="row">
				<div class="col-md-4">
					<div class="logo">
						<h1><a href="/">IdleCampus <span class="tblue">.</span></a></h1>
					</div>
				</div>
        <div class="navigation pull-right" style="
                    margin-left: -1%;
                ">
				
					<% if signed_in? %>
            <%= link_to "Profile", home_path %>
         <%=   link_to "<i class='fa fa-sign-out'></i> Sign out".html_safe, signout_path, method: "delete", "ng-click" => "signout()",style:"margin:50px" %>
         
          <a id="start">Help</a>
        
         
         <% else %>
       
           <%= link_to "<i class='fa fa-sign-in'></i> Log In".html_safe,signin_path%>
