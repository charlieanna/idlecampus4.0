             <%= link_to "<i class='fa fa-heart'></i> Sign Up As Teacher".html_safe,teachers_signup_path %>
           </span>
             <span data-intro="Create an account by joining a group and always be in touch with your group/class" data-position="right">
            <%= link_to "<i class='fa fa-heart'></i> Sign Up As Student".html_safe,students_signup_path %>
          </span>
          
          <%= link_to "Blog","http://blog.idlecampus.com" %>
          <a id="start">Help</a>
         <% end %>

				</div>
			</div>
		</div>
