
<%= form_for Alert.new, :html => {:id => "groupnoteupload"},remote: true do |f| %>
 
   
			<%= f.text_area :message,rows: 3,class:"span9",placeholder:"Enter your note here:"%>
     
      <% if @group.group_code %>
			  <%= f.hidden_field :group,:value =>@group.group_code %>
      <% else %>
      <%= f.select :group, current_user.groups.collect {|p| [ p.name, p.group_code ] } %>
      
      <% end %>
     
     

      <p><button type="button" ng-click="publishgroupalert()" id="sendalert" class="btn-success has-spinner">
        Send</button>
      </p>
<% end %>