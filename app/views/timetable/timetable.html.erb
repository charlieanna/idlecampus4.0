<div class="container" ng-controller="TimetableCtrl">
  <div class="row">
    <div class="span2">
      <!--Sidebar content-->

      <div class="input-append"><input class="input-small" type"text" name="teacher" id="teacherinput"
        placeholder="Teacher"/>
        <button class="btn" id="teacherbutton">Add</button>
        <br></div>
      <div class="input-append"><input class="input-small" type"text" name="subject" id="subjectinput"
        placeholder="Subject"/>
        <button class="btn" id="subjectbutton">Add</button>
        <br></div>
      <div class="input-append"><input class="input-small" type"text" name="room" id="roominput" placeholder="Room No"/>
        <button class="btn" id="roombutton">Add</button>
        <br></div>
      <span id="teachers"><ul><h3>Teachers:</h3></ul></span>
      <!-- Subjects: -->
      <span id="subjects"><ul><h3>Subjects:</h3></ul></span>
      <!-- rooms: -->
      <span id="rooms"><ul><h3>Rooms:</h3></ul></span><br>


    </div>
    <div class="span10">
      <!--Body content-->


      From:
      <select id="from_date_hour" class="span2" name="date[hour]">
        <option value="00">12 AM</option>
        <option value="01">01 AM</option>
        <option value="02">02 AM</option>
        <option value="03">03 AM</option>
        <option value="04">04 AM</option>
        <option value="05">05 AM</option>
        <option selected="selected" value="06">06 AM</option>
        <option value="07">07 AM</option>
        <option value="08">08 AM</option>
        <option value="09">09 AM</option>
        <option value="10">10 AM</option>
        <option value="11">11 AM</option>
        <option value="12">12 PM</option>
        <option value="13">01 PM</option>
        <option value="14">02 PM</option>
        <option value="15">03 PM</option>
        <option value="16">04 PM</option>
        <option value="17">05 PM</option>
        <option value="18">06 PM</option>
        <option value="19">07 PM</option>
        <option value="20">08 PM</option>
        <option value="21">09 PM</option>
        <option value="22">10 PM</option>
        <option value="23">11 PM</option>
      </select>
      : <select id="from_date_minute"  class="span2" name="date[minute]">
      <option value="00">00</option>
      <option value="05">05</option>
      <option value="10">10</option>
      <option value="15">15</option>
      <option value="20">20</option>
      <option value="25">25</option>
      <option value="30">30</option>
      <option value="35">35</option>
      <option value="40">40</option>
      <option value="45">45</option>
      <option value="50">50</option>
      <option value="55">55</option>
    </select>

      To:
      <select id="to_date_hour"  class="span2" name="date[hour]">
        <option value="00">12 AM</option>
        <option value="01">01 AM</option>
        <option value="02">02 AM</option>
        <option value="03">03 AM</option>
        <option value="04">04 AM</option>
        <option value="05">05 AM</option>
        <option selected="selected" value="06">06 AM</option>
        <option value="07">07 AM</option>
        <option value="08">08 AM</option>
        <option value="09">09 AM</option>
        <option value="10">10 AM</option>
        <option value="11">11 AM</option>
        <option value="12">12 PM</option>
        <option value="13">01 PM</option>
        <option value="14">02 PM</option>
        <option value="15">03 PM</option>
        <option value="16">04 PM</option>
        <option value="17">05 PM</option>
        <option value="18">06 PM</option>
        <option value="19">07 PM</option>
        <option value="20">08 PM</option>
        <option value="21">09 PM</option>
        <option value="22">10 PM</option>
        <option value="23">11 PM</option>
      </select>
      : <select id="to_date_minute"  class="span2" name="date[minute]">
      <option value="00">00</option>
      <option value="05">05</option>
      <option value="10">10</option>
      <option value="15">15</option>
      <option value="20">20</option>
      <option value="25">25</option>
      <option value="30">30</option>
      <option value="35">35</option>
      <option value="40">40</option>
      <option value="45">45</option>
      <option value="50">50</option>
      <option value="55">55</option>
    </select>
      <button class="btn" id="addrow">Add Row</button>
      <button id="new" class="btn">New Timetable</button>
      <button class="btn" id="send2">Send Timetable</button>

      <div class="widget widget-table">
        <div class="widget-header">
          <h3><i class="icon-table"></i>&nbsp;&nbsp;College: <span id="collegename"></span>Batch: <span id="batchname"></span></h3>
        </div>
        <div class="widget-content">
          <table id="timetable" class="table table-striped table-bordered">

            <thead>
            <tr>
              <th>Time</th>
              <th>Monday</th>
              <th>Tuesday</th>
              <th>Wednesday</th>
              <th>Thursday</th>
              <th>Friday</th>
              <th>Saturday</th>

            </tr>
            </thead>

            <tbody>
            <tr ng-repeat="time in timeArray" id="{{getDisplayTime(time)}}">


              <td>

                {{getDisplayTime(time)}}
              </td>
              <td ng-repeat="data in time">

                Subject <span name="subject" id="s{{($parent.$index)*6+$index+1}}">{{data.subject}}</span>
                <br/>
                Room:<span name="room" id="l{{($parent.$index)*6+$index+1}}">{{data.room}}</span>
                <br/>
                Teacher:<span name="teacher" id="t{{($parent.$index)*6+$index+1}}">{{data.teacher}}</span>
                <br/>
                <button class="btn btn-mini" id="sub{{($parent.$index)*6+$index+1}}" ng-click="add(($parent.$index)*6+$index+1)">Add</button>
                <button class="btn btn-mini" id="edit{{($parent.$index)*6+$index+1}}" ng-click="edit(($parent.$index)*6+$index+1)">Edit</button>
              </td>


            </tr>
              </tbody>
          </table>

        </div>
      </div>

      <form class="form-vertical">
        <textarea rows="10" class="span12" id="message"></textarea>
        <button class="btn" id="sendmessage">Send Message</button>

      </form>

    </div>


  </div>
