<%= render 'groups/header' %>


	  <div class="row"  ng-controller="GroupsCtrl" ng-init="get()">
        <aside class="span3">
            <section>
                <div>
									
                  <%= render 'shared/user_info' %>
                  
									<% if current_user.rolable_type == "Teacher"%>
									<section>
									  <%= render 'shared/group_form' %>
									</section>
									<section>
									  <%= render 'shared/groups' %>
									</section>
								
									<% end %>

   

    
	
		
		



								
                   
                </div>
            </section>

        </aside>
        <div class="span9">
            <!-- Main content         -->
            <div id="main-content">
                <!-- Container -->
                <div class="container">
									<% if current_user.rolable_type == "Teacher"%>
								
									<%= render 'messages/tabs'%>
									
									
									
						   
                  
                  <% end %>
                  
                 
                
                  
          				<div class="span9">
          					<h1 class="page-title">Group Posts</h1>
          					<!-- <div class="alert alert-danger">
                      <button type="button" class="close" data-dismiss="alert">&times;</button>
                      This is a sample <strong>alert message</strong>. You can close it at any time.
                    </div> -->
					
          					<div class="widget">
          						<div class="widget-header">
          							<h3><i class="icon-comments"></i>&nbsp;&nbsp;Posts</h3>
          						</div>
          						<div class="widget-content">
          							<ul class="messages-activity" id="posts">
                          
                         
                          <% @group.alerts.each do |alert|%>
        									<li>
          								<p class="well well-message">
          									<%= alert.message %>
          								</p>
                          <abbr class="timeago" title="<%= alert.created_at.getutc.iso8601 %>">
                            <%= alert.created_at.to_s %>
                          </abbr>
                          </li>
                          <% end %>
                          
                          
      										<% @group.notes.each do |note| %>
      									<li><h3><%= note.file.path.split('/').last %></h3>
        								<p class="well well-message">
        									<%= note.message %>
                          
        								</p>
                        <abbr class="timeago" title="<%= note.created_at.getutc.iso8601 %>">
                          <%= note.created_at.to_s %>
                        </abbr>
                        <div class="message-buttons">
                          <%= link_to "Download",note.file.url,class: "btn btn-success" %>
					             </div>
                        </li>
                       
      									<% end %>
                                   
                                  </ul>
          						</div>
          					</div>

          				</div>
								
						    

			           
                </div>
            </div>


            <!-- /Content -->


            <!-- /Content -->
        </div>


    </div>
    <!-- /Container -->
</div>




</div>



